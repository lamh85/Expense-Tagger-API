model transaction {
  id            Int       @id @default(autoincrement())
  transactionId String    @unique
  date          BigInt
  amount        Decimal   @db.Decimal(5,2) // Max $99,999.99
  vendor        String
  category      String
  bank          String
  created_at    DateTime  @default(now())

  @@unique([transactionId, bank])
